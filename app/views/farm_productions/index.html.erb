<!-- START DATATABLE 1 -->
<h3>Producción</h3>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Producción
        <small></small> |
      </div>
      <div class="panel-body">
        <table id="datatable1" class="table table-striped table-hover">
          <thead>
            <tr>
              <th class="sort-alpha">Semana : Fecha</th>
              <th>Variedad</th>
              <th>Cantidad</th>
              <th>Origen</th>
            </tr>
          </thead>
          <tbody>
            <% @productions.each do |production| %>
            <tr class="gradeX">
              <td> <%= production.week.week.to_s + " : " + production.week.initial_day.to_s %> </td>
              <td> <%= production.variety.name %> </td>
              <td> <%= production.quantity %> </td>
              <td> <%= production.origin %> </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<!-- END DATATABLE 1 -->
