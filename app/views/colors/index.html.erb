<h3>Importar Colores</h3>
<blockquote class="box-placeholder">
   <p>Importar archivo CSV
      <br>EL archivo debe contener las <% "hey" %> columnas:
      <br>nombre
   </p>
</blockquote>
<div class="row upload-box">
   <form id="select_button"  enctype="multipart/form-data" action="colors/csv_import" accept-charset="UTF-8" method="post">
      <div class="row">
         <div class="col-md-3">
            <input   accept="csv" class="form-control-file upload" id="file" name="file" type="file" />
         </div>
         <div class="col-md-2">
            <button type="submit" class="btn btn-primary start"><i class="fa fa-fw fa-upload"></i>
         </div>
      </div>
   </form>
</div>
<div class="row">
   <div class="col-lg-12">
      <div class="panel panel-default">
         <div class="panel-heading">
            Colores 
         </div>
         <div class="panel-body">
            <table id="datatable1" class="table table-striped table-hover">
               <thead>
                  <tr>
                     <th class="sort-alpha">Nombre</th>
                     <th class="sort-alpha">Numero Variedades</th>
                     <th class="sort-alpha">Acciones</th>
                  </tr>
               </thead>
               <tbody>
                <% @colors.each do |color| %>
                  <tr class="gradeX">
                     <td> <%= color.name %> </td>
                     <td> </td>
                     <td>
                       <%= link_to 'Editar', edit_color_path(color) %> |
                       <%= link_to 'Eliminar', color,  method: :delete, data: { confirm: 'Desea eliminar el color?' } %>
                     </td>
                  </tr>
               <% end %>
               </tbody>
            </table>
         </div>
      </div>
   </div>
</div>
