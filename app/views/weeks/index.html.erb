<!-- START DATATABLE 1 -->
<h3>Calendario</h3>


<div class="row">
   <div class="col-lg-6">
      <div class="panel panel-default">
         <div class="panel-heading">Importar Calendario</div>
         <div class="panel-body">
            <blockquote class="box-placeholder">
               <p>Importar archivo CSV
                  <br>EL archivo debe contener las <% "hey" %> columnas:
                  <br>initial_day,week
               </p>
            </blockquote>
            <div class="row upload-box">
              <form id="select_button"  enctype="multipart/form-data" action="import_weeks" accept-charset="UTF-8" method="post">
                  <div class="row">
                     <div class="col-md-6">
                        <input   accept="csv" class="form-control-file upload" id="file" name="file" type="file" />
                     </div>
                     <div class="col-md-2">
                        <button type="submit" class="btn btn-primary start"><i class="fa fa-fw fa-upload"></i>
                     </div>
                  </div>
               </form>
            </div>
         </div>
      </div>
   </div>
   <div class="col-lg-6">
      <div class="panel panel-default">
        <div class="panel-heading">Borrar Calendario</div>
        <div class="panel-body">
          <form action= <%= weeks_batch_delete_path %> enctype="multipart/form-data"  accept-charset="UTF-8" method="post" class="form-horizontal">
            <input type="hidden" name="_method" value="delete" />
               <div class="form-group">
                  <label class="col-sm-2 control-label">Ano:  </label>
                  <div class="col-md-6">
                     <select name="year" class="form-control m-b">
                        <option value="all">BORRAR TODOS</option>
                        <%= @years.each do |year| %>
                        <option value="<%= year.year %>"><%= year %></option>
                        <% end %>
                     </select>
                  </div>
               </div>
            <button type="submit" class="btn btn-primary start"><i> Borrar Calendario</i>
          </form>
        </div>
      </div>
   </div>
</div>


<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Calendario |
        <small></small> |
      </div>
      <div class="panel-body">
        <table id="datatable1" class="table table-striped table-hover">
          <thead>
            <tr>
              <th class="sort-alpha">Inicio semana</th>
              <th>Semana</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% @weeks.each do |week| %>
            <tr class="gradeX">
              <td> <%= week.initial_day %> </td>
              <td> <%= week.week %> </td>
              <td>
                <%= link_to 'Editar', edit_week_path(week) %>
              </td>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<!-- END DATATABLE 1 -->
