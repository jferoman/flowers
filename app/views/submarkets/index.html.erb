<!-- START DATATABLE 1 -->
<h3>Submercados</h3>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Camas
        <small></small> |
        <%= link_to 'Nuevo Submercado', new_submarket_path %>
      </div>
      <div class="panel-body">
        <table id="datatable1" class="table table-striped table-hover">
          <thead>
            <tr>
              <th class="sort-alpha">Codigo</th>
              <th>Submercado</th>
              <th>Mercado</th>
            </tr>
          </thead>
          <tbody>
            <% @submarkets.each do |submarket| %>
            <tr class="gradeX">
              <td> <%= submarket.code %> </td>
              <td> <%= submarket.name %> </td>
              <td> <%= submarket.market.name %> </td>
              <td>
                <%= link_to 'Editar', edit_submarket_path(submarket) %> |
                <%= link_to 'Eliminar', submarket_path(submarket),  method: :delete, data: { confirm: 'Desea eliminar el Submercado?' } %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<!-- END DATATABLE 1 -->
<!-- CSV Importer -->
<br>
<br>
<h3>Importar lista de submercados</h3>
<blockquote class="box-placeholder">
  <p>Importar archivo CSV</p>
</blockquote>
<div class="row upload-box">
  <form id="select_button"  enctype="multipart/form-data" action="import_submarkets" accept-charset="UTF-8" method="post">
    <div class="row">
      <div class="col-md-3">
        <input   accept="csv" class="form-control-file upload" id="file" name="file" type="file" />
      </div>
      <div class="col-md-2">
        <button type="submit" class="btn btn-primary start"><i class="fa fa-fw fa-upload"></i>
        </div>
      </div>
    </form>
  </div>
  <!-- END CSV Importer -->
