<%= form_for @submarket do |f| %>
  <div class="form-group">
    <%= f.label :code, 'Codigo: ' %>
    <%= f.text_field :code, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :name, 'Nombre: ' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :market_id, 'Mercado' %>
    <select class="selectpicker" data-live-search="true" name="submarket[market_id]" id="submarket_market_id">
      <% @company.markets.each do |market|%>
      <option value=<%= market.id.to_s %>>
        <%= market.name %>
      </option>
      <% end %>
    </select>
  </div>
  <div>
    <%= f.submit 'Editar Submercado' %>
  </div>
<% end %>
