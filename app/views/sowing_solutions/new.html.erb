<%= form_for @sowing_solution do |f| %>
  <div class="form-group">
    <%= f.label :variety_id, 'Variedad: ' %>
    <select class="selectpicker" data-live-search="true" name="sowing_solution[variety_id]" id="sowing_solution_variety_id">
      <% Variety.all.each do |variety|%>
      <option value=<%= variety.id.to_s %>>
        <%= variety.name %>
      </option>
      <% end %>
    </select>
  </div>
  <div class="form-group">
    <%= f.label :week_id, 'Semana' %>
    <select class="selectpicker" data-live-search="true" name="sowing_solution[week_id]" id="sowing_solution_week_id">
      <% Week.all.each do |week|%>
      <option value=<%= week.id.to_s %>>
        <%= week.initial_day %>
      </option>
      <% end %>
    </select>
  </div>
  <div class="form-group">
    <%= f.label :block_id, 'Bloque: ' %>
    <select class="selectpicker" data-live-search="true" name="sowing_solution[block_id]" id="sowing_solution_block_id">
      <% @farm.blocks.each do |block|%>
      <option value=<%= block.id.to_s %>>
        <%= block.name %>
      </option>
      <% end %>
    </select>
  </div>
  <div class="form-group">
    <%= f.label :bed_type_id, 'Tipo de cama: ' %>
    <select class="selectpicker" data-live-search="true" name="sowing_solution[bed_type_id]" id="sowing_solution_bed_type_id">
      <% BedType.all.each do |bed_type|%>
      <option value=<%= bed_type.id.to_s %>>
        <%= bed_type.name %>
      </option>
      <% end %>
    </select>
  </div>
  <div class="form-group">
    <%= f.label :quantity, 'Cantidad' %>
    <%= f.text_field :quantity, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :cutting_week, 'Semana de corte' %>
    <%= f.text_field :cutting_week, class: 'form-control' %>
  </div>
  <br>
  <div>
    <%= f.submit 'Crear Solucion de siembra' %>
  </div>
<% end %>
