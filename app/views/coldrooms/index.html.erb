<!-- START DATATABLE 1 -->
<h3>Cuarto frio</h3>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Cuarto frio |
        <small></small> |
        <%= link_to 'Nuevo Cuarto', new_farm_coldroom_path %>
      </div>
      <div class="panel-body">
        <table id="datatable1" class="table table-striped table-hover">
          <thead>
            <tr>
              <th class="sort-alpha">Nombre</th>
              <th class="sort-alpha">Capacidad</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% @coldrooms.each do |coldroom| %>
            <tr class="gradeX">
              <td> <%= coldroom.name %> </td>
              <td> <%= coldroom.capacity %> </td>
              <td>
                <%= link_to 'Editar', edit_coldroom_path(coldroom) %> |
                <%= link_to 'Eliminar', coldroom,  method: :delete, data: { confirm: 'Desea eliminar el Cuarto?' } %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<!-- END DATATABLE 1 -->
