<!-- START DATATABLE 1 -->
<h3>Densidad de flor</h3>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Densidad de flor |
        <small></small> |
        <%= link_to 'Nueva Densidad', new_farm_flower_density_path %>
      </div>
      <div class="panel-body">
        <table id="datatable1" class="table table-striped table-hover">
          <thead>
            <tr>
              <th class="sort-alpha">Flor</th>
              <th class="sort-alpha">Densidad</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% @flower_densities.each do |flower_densities| %>
            <tr class="gradeX">
              <td> <%= flower_densities.flower.name %> </td>
              <td> <%= flower_densities.density %> </td>
              <td>
                <%= link_to 'Editar', edit_flower_density_path(flower_densities) %> |
                <%= link_to 'Eliminar', flower_densities,  method: :delete, data: { confirm: 'Desea eliminar la Densidad?' } %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<!-- END DATATABLE 1 -->
