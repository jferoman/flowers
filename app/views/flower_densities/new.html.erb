<%= form_for @flower_density do |f| %>
  <div class="form-group">
    <%= f.label :flower_id, 'Flor' %>
    <select class="selectpicker" data-live-search="true" name="flower_density[flower_id]" id="flower_density_flower_id">
      <% Flower.all.each do |flower|%>
      <option value=<%= flower.id.to_s %>>
        <%= flower.name %>
      </option>
      <% end %>
    </select>
  </div>
  <div class="form-group">
    <%= f.label :density, 'Densidad' %>
    <%= f.text_field :density, class: 'form-control' %>
  </div>
  <div>
    <%= f.submit 'Crear Densidad' %>
  </div>
<% end %>
