<%= form_for @block_production do |f| %>
  <div class="form-group">
    <%= f.label :week_id, 'Semana' %>
    <select class="selectpicker" data-live-search="true" name="block_production[week_id]" id="block_production_week_id">
      <% Week.all.each do |week|%>
      <option value=<%= week.id.to_s %>>
        <%= week.initial_day %>
      </option>
      <% end %>
    </select>
  </div>
  <div class="form-group">
    <%= f.label :variety_id, 'Variedad: ' %>
    <select class="selectpicker" data-live-search="true" name="block_production[variety_id]" id="block_production_variety_id">
      <% Variety.all.each do |variety|%>
      <option value=<%= variety.id.to_s %>>
        <%= variety.name %>
      </option>
      <% end %>
    </select>
  </div>
  <div class="form-group">
    <%= f.label :block_id, 'Bloque: ' %>
    <select class="selectpicker" data-live-search="true" name="block_production[block_id]" id="block_production_block_id">
      <% @farm.blocks.each do |block|%>
      <option value=<%= block.id.to_s %>>
        <%= block.name %>
      </option>
      <% end %>
    </select>
  </div>
  <div class="form-group">
    <%= f.label :quantity, 'Cantidad' %>
    <%= f.text_field :quantity, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :origin, 'Origen' %>
    <%= f.text_field :origin, class: 'form-control' %>
  </div>
  <div>
    <%= f.submit 'Actualizar produccion por Bloque' %>
  </div>
<% end %>
