<%= form_for @productivity_curve do |f| %>
  <div class="form-group">
    <%= f.label :week_number, 'Semana: ' %>
    <%= f.text_field :week_number, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :cost, 'Costo: ' %>
    <%= f.text_field :cost, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :production, 'Produccion' %>
    <%= f.text_field :production, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :cut, 'Corte' %>
    <%= f.text_field :cut, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :farm_id, 'Finca' %>
    <select class="selectpicker" data-live-search="true" name="productivity_curve[farm_id]" id="productivity_curve_farm_id">
      <% Farm.all.each do |farm|%>
      <option value=<%= farm.id.to_s %>>
        <%= farm.name %>
      </option>
      <% end %>
    </select>
  </div>
  <div class="form-group">
    <%= f.label :variety_id, 'Variedad' %>
    <select class="selectpicker" data-live-search="true" name="productivity_curve[variety_id]" id="productivity_curve_variety_id">
      <% Variety.all.each do |variety|%>
      <option value=<%= variety.id.to_s %>>
        <%= variety.name %>
      </option>
      <% end %>
    </select>
  </div>
  <div>
    <%= f.submit 'Crear Curva de produccion' %>
  </div>
<% end %>
