<%= form_for @productivity_curve do |f| %>
  <div class="form-group">
    <%= f.label :week_number, 'Semana: ' %>
    <%= f.text_field :week_number, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :cost, 'Costo: ' %>
    <%= f.text_field :cost, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :production, 'Produccion' %>
    <%= f.text_field :production, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :cut, 'Corte' %>
    <%= f.text_field :cut, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :farm_id, 'Finca' %>
    <%= f.collection_select(:farm_id, Farm.all, :id, :name) %>
  </div>
  <div class="form-group">
    <%= f.label :variety_id, 'Variedad' %>
    <%= f.collection_select(:variety_id, Variety.all, :id, :name) %>
  </div>
  <div>
    <%= f.submit 'Crear Variedad' %>
  </div>
<% end %>
