<!-- START DATATABLE 1 -->
<h3>Uso de Bloques</h3>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Uso de Bloques |
        <small></small> |
        <%= link_to 'Nuevo Uso de Bloque', new_farm_block_color_flower_path %>
      </div>
      <div class="panel-body">
        <table id="datatable1" class="table table-striped table-hover">
          <thead>
            <tr>
              <th class="sort-alpha">Flor</th>
              <th>Color</th>
              <th>Bloque</th>
              <th>Uso</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% @block_color_flowers.each do |block_color_flower| %>
            <tr class="gradeX">
              <td> <%= block_color_flower.flower.name %> </td>
              <td> <%= block_color_flower.bolor.name %> </td>
              <td> <%= block_color_flower.block.name %> </td>
              <td> <%= block_color_flower.usage %> </td>
              <td>
                <%= link_to 'Editar', edit_farm_block_color_flower_path(block_color_flower) %> |
                <%= link_to 'Eliminar', block_color_flower,  method: :delete, data: { confirm: 'Desea eliminar el bloque?' } %> |
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<!-- END DATATABLE 1 -->
<!-- CSV Importer -->
<br>
<br>
<h3>Importar lista de Uso de bloques</h3>
<blockquote class="box-placeholder">
   <p>Importar archivo CSV
   </p>
</blockquote>
<div class="row upload-box">
   <form id="select_button"  enctype="multipart/form-data" action="import_blocks" accept-charset="UTF-8" method="post">
      <div class="row">
         <div class="col-md-3">
            <input   accept="csv" class="form-control-file upload" id="file" name="file" type="file" />
         </div>
         <div class="col-md-2">
            <button type="submit" class="btn btn-primary start"><i class="fa fa-fw fa-upload"></i>
         </div>
      </div>
   </form>
</div>
<!-- END CSV Importer -->

