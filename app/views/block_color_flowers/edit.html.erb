<%= form_for @block_color_flower do |f| %>
  <div class="form-group">
    <%= f.label :flower_id, 'Flor: ' %>
    <select class="selectpicker" data-live-search="true" name="block_color_flower[flower_id]" id="block_color_flower_flower_id">
      <% Flower.all.each do |flower|%>
      <option value=<%= flower.id.to_s %>>
        <%= flower.name %>
      </option>
      <% end %>
    </select>
  </div>
  <div class="form-group">
    <%= f.label :color_id, 'Color: ' %>
    <select class="selectpicker" data-live-search="true" name="block_color_flower[color_id]" id="block_color_flower_color_id">
      <% Color.all.each do |color|%>
      <option value=<%= color.id.to_s %>>
        <%= color.name %>
      </option>
      <% end %>
    </select>
  </div>

  <div class="form-group">
    <%= f.label :block_id, 'Bloque: ' %>
    <select class="selectpicker" data-live-search="true" name="block_color_flower[block_id]" id="block_color_flower_block_id">
      <% @farm.blocks.each do |block|%>
      <option value=<%= block.id.to_s %>>
        <%= block.name %>
      </option>
      <% end %>
    </select>
  </div>

  <div class="field">
    <%= f.label 'Uso: ' %>
    <%= f.check_box :usage, {}, "true", "false"%>
  </div>
  <br>
  <div>
    <%= f.submit 'Actualizar uso de Bloque' %>
  </div>
<% end %>
