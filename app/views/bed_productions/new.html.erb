
<%= form_for @bed_production do |f| %>
  <div class="form-group">
    <%= f.label :week_id, 'Semana: ' %>

    <select class="selectpicker" data-live-search="true" id="bed_production_week_id" name="bed_production[week_id]">
      <% Week.all.each do |week|%>
      <option value=<%= week.id.to_s %>>
        <%= week.initial_day %>
      </option>
      <% end %>
    </select>

  </div>
  <div class="form-group">
    <%= f.label :variety_id, 'Variedad: ' %>

    <select class="selectpicker" data-live-search="true" id="bed_production_variety_id" name="bed_production[variety_id]">
      <% Variety.all.each do |variety|%>
      <option value=<%= variety.id.to_s %>>
        <%= variety.name %>
      </option>
      <% end %>
    </select>

  </div>
  <div class="form-group">
    <%= f.label :bed_id, 'Cama - Bloque ' %>

    <select class="selectpicker" data-live-search="true" id="bed_production_bed_id" name="bed_production[bed_id]">
      <% @farm.beds.includes(:block).each do |bed|%>
      <option value=<%= bed.id.to_s %>>
        <%= bed.number.to_s + " - " + bed.block.name %>
      </option>
      <% end %>
    </select>

  </div>

  <div class="form-group">
    <%= f.label :quantity, 'Cantidad' %>
    <%= f.text_field :quantity, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :origin, 'Origen' %>
    <%= f.text_field :origin, class: 'form-control' %>
  </div>

  <div>
    <%= f.submit 'Crear produccion por Cama' %>
  </div>
<% end %>


