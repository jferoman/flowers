<%= form_for @color_submarket do |f| %>
    <%= f.label :submarket_id, 'Submercado: ' %>
    <select class="selectpicker" data-live-search="true" name="color_submarket[submarket_id]" id="color_submarket_submarket_id">
      <% @company.submarkets.each do |submarket|%>
      <option value=<%= submarket.id.to_s %>>
        <%= submarket.name %>
      </option>
      <% end %>
    </select>

  </div>
  <div class="form-group">
    <%= f.label :color_id, 'Color: ' %>

    <select class="selectpicker" data-live-search="true" name="color_submarket[color_id]" id="color_submarket_color_id">
      <% Color.all.each do |color|%>
      <option value=<%= color.id.to_s %>>
        <%= color.name %>
      </option>
      <% end %>
    </select>

  </div>
  <div class="form-group">
    <%= f.label :price, 'Precio: ' %>
    <%= f.text_field :price, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label 'Defecto: ' %>
    <%= f.check_box :default, {}, "true", "false"%>
  </div>
  <br>
  <div>
    <%= f.submit 'Actualizar Precio y defecto' %>
  </div>
<% end %>
