<!-- START DATATABLE 1 -->
<h3>Precios y defectos</h3>

<div class="row">
   <div class="col-lg-6">
      <div class="panel panel-default">
         <div class="panel-heading">Importar Precios y defecto</div>
         <div class="panel-body">
            <blockquote class="box-placeholder">
               <p>Importar archivo CSV
                  <br>EL archivo debe contener las <% "hey" %> columnas:
                  <br>market_code,color,price,default
               </p>
            </blockquote>
            <div class="row upload-box">
              <form id="select_button"  enctype="multipart/form-data" action="import_color_submarkets" accept-charset="UTF-8" method="post">
                  <div class="row">
                     <div class="col-md-6">
                        <input   accept="csv" class="form-control-file upload" id="file" name="file" type="file" />
                     </div>
                     <div class="col-md-2">
                        <button type="submit" class="btn btn-primary start"><i class="fa fa-fw fa-upload"></i>
                     </div>
                  </div>
               </form>
            </div>
         </div>
      </div>
   </div>
   <div class="col-lg-6">
      <div class="panel panel-default">
        <div class="panel-heading">Borrar Precios y defectos</div>
        <div class="panel-body">
          <form action= <%= color_submarkets_batch_delete_path %> enctype="multipart/form-data"  accept-charset="UTF-8" method="post" class="form-horizontal">
            <input type="hidden" name="_method" value="delete" />
               <div class="form-group">
                  <label class="col-sm-2 control-label">SubMercado:  </label>
                  <div class="col-md-6">
                     <select name="submarket_id" class="form-control m-b">
                        <option value="all">BORRAR TODOS</option>
                        <%= @submarkets.each do |submarket| %>
                        <option value="<%= submarket.id %>"><%= submarket.name %></option>
                        <% end %>
                     </select>
                  </div>
               </div>
            <button type="submit" class="btn btn-primary start"><i> Borrar Precios y defectos</i>
          </form>
        </div>
      </div>
   </div>
</div>


<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Submercado
        <small></small> |
        <%= link_to 'Nuevo Submercado', new_color_submarket_path %>
      </div>
      <div class="panel-body">
        <table id="datatable1" class="table table-striped table-hover">
          <thead>
            <tr>
              <th class="sort-alpha">Submercado</th>
              <th>Color</th>
              <th>Precio</th>
              <th>Defecto</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% @color_submarkets.each do |color_submarket| %>
            <tr class="gradeX">
              <td> <%= color_submarket.submarket.code %> </td>
              <td> <%= color_submarket.color.name %> </td>
              <td>$ <%= color_submarket.price %> </td>
              <td> <%= color_submarket.default %> </td>
              <td>
                <%= link_to 'Editar', edit_color_submarket_path(color_submarket) %> |
                <%= link_to 'Eliminar', color_submarket_path(color_submarket),  method: :delete, data: { confirm: 'Desea eliminar el registro seleccionado?' } %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<!-- END DATATABLE 1 -->
