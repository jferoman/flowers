<!-- START DATATABLE 1 -->
<h3>Precios y defectos</h3>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Submercado
        <small></small> |
        <%= link_to 'Nuevo Submercado', new_color_submarket_path %>
      </div>
      <div class="panel-body">
        <table id="datatable1" class="table table-striped table-hover">
          <thead>
            <tr>
              <th class="sort-alpha">Submercado</th>
              <th>Color</th>
              <th>Precio</th>
              <th>Defecto</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% @color_submarkets.each do |color_submarket| %>
            <tr class="gradeX">
              <td> <%= color_submarket.submarket.name %> </td>
              <td> <%= color_submarket.color.name %> </td>
              <td>$ <%= color_submarket.price %> </td>
              <td> <%= color_submarket.default %> </td>
              <td>
                <%= link_to 'Editar', edit_color_submarket_path(color_submarket) %> |
                <%= link_to 'Eliminar', color_submarket_path(color_submarket),  method: :delete, data: { confirm: 'Desea eliminar el registro seleccionado?' } %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<!-- END DATATABLE 1 -->
<!-- CSV Importer -->
<br>
<br>
<h3>Importar lista de Precios y defectos</h3>
<blockquote class="box-placeholder">
  <p>Importar archivo CSV</p>
</blockquote>
<div class="row upload-box">
  <form id="select_button"  enctype="multipart/form-data" action="import_color_submarkets" accept-charset="UTF-8" method="post">
    <div class="row">
      <div class="col-md-3">
        <input   accept="csv" class="form-control-file upload" id="file" name="file" type="file" />
      </div>
      <div class="col-md-2">
        <button type="submit" class="btn btn-primary start"><i class="fa fa-fw fa-upload"></i>
        </div>
      </div>
    </form>
  </div>
  <!-- END CSV Importer -->
