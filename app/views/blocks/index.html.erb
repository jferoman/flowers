<!-- START DATATABLE 1 -->
<h3>Bloques</h3>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Bloques |
        <small></small> 
        <%= link_to 'Nuevo Bloque', new_company_farm_block_path %>
      </div>
      <div class="panel-body">
        <table id="datatable1" class="table table-striped table-hover">
          <thead>
            <tr>
              <th class="sort-alpha">Nombre</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% @blocks.each do |block| %>
            <tr class="gradeX">
              <td> <%= block.name %> </td>
              <td>
                <%= link_to 'Editar', edit_block_path(block) %> |
                <%= link_to 'Eliminar', block,  method: :delete, data: { confirm: 'Desea eliminar el bloque?' } %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<!-- END DATATABLE 1 -->
<!-- CSV Importer -->
<br>
<br>
<h3>Importar lista de bloques</h3>
<blockquote class="box-placeholder">
   <p>Importar archivo CSV
   </p>
</blockquote>
<div class="row upload-box">
   <form id="select_button"  enctype="multipart/form-data" action="import_blocks" accept-charset="UTF-8" method="post">
      <div class="row">
         <div class="col-md-3">
            <input   accept="csv" class="form-control-file upload" id="file" name="file" type="file" />
         </div>
         <div class="col-md-2">
            <button type="submit" class="btn btn-primary start"><i class="fa fa-fw fa-upload"></i>
         </div>
      </div>
   </form>
</div>
<!-- END CSV Importer -->

