<!-- START DATATABLE 1 -->
<div class="row">
   <div class="col-lg-12">
      <div class="panel panel-default">
         <div class="panel-heading">
            Bloques |
            <small>database</small> |
            <%= link_to 'Nuevo Bloque', new_company_farm_block_path %>
         </div>
         <div class="panel-body">
            <table id="datatable1" class="table table-striped table-hover">
               <thead>
                  <tr>
                     <th class="sort-alpha">Nombre</th>
                     <th>Acciones</th>
                  </tr>
               </thead>
               <tbody>
                <% @blocks.each do |block| %>
                  <tr class="gradeX">
                     <td> <%= block.name %> </td>
                     <td>
                        <%= link_to 'Editar', "" %> |
                        <%= link_to 'Borrar', block, method: :delete, data: { confirm: 'Esta seguro?' }%>
                     </td>
                  </tr>
               <% end %>
               </tbody>
            </table>
         </div>
      </div>
   </div>
</div>
<!-- END DATATABLE 1 -->
