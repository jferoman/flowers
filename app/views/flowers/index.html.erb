<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Flores |
        <small></small>
        <%= link_to 'Nueva flor', new_flower_path %>
      </div>
      <div class="panel-body">
        <table  class="table table-striped table-hover">
          <thead>
            <tr>
              <th class="sort-alpha">Nombre</th>
              <th class="sort-alpha">Numero Variedades</th>
              <th class="sort-alpha">Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% @flowers.each do |flower| %>
            <tr class="gradeX">
              <td> <%= flower.name %> </td>
              <td> <%= flower.varieties.count %></td>
              <td>
                <%= link_to 'Editar', edit_flower_path(flower) %> |
                <%= link_to 'Eliminar', flower,  method: :delete, data: { confirm: 'Desea eliminar la flor?' } %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>