<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.js"></script>
<div class="panel panel-default">
	<div class="panel-heading">Actualizar Resistencia al Guarde</div>
	<div class="panel-body">
		<form action=<%="/storage_resistances/" +@storage_resistance.id.to_s %> enctype="multipart/form-data"  accept-charset="UTF-8" method="post" class="form-horizontal">
			<input type="hidden" name="_method" value="put" />
			<div class="form-group">
				<label class="col-sm-2 control-label">Tipo de Resistencia al guarde</label>
				<div class="col-md-6">
					<select name="storage_resistance_type_id" class="form-control m-b" selected= <%="@storage_resistance.name"%> >
						<%= @storage_resistance_types.each do |storage_resistance_type| %>
						<option value="<%= storage_resistance_type.id %>"><%= storage_resistance_type.name %></option>
						<% end %>
					</select>
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-2 control-label">Porcentaje perdido</label>
				<div class="col-md-6">
					<input type="percentage" name="lost_percentage" placeholder="Ingrese el porcentaje de perdida" class="form-control" value= <%=@storage_resistance.lost_percentage %> >
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-2 control-label">Semana</label>
				<div class="col-md-6">
					<select name="week_number" class="form-control m-b" selected= <%= @storage_resistance.week_number %>>
						<%= @week_numbers.each do |week_number| %>
						<option value="<%= week_number %>"><%= week_number %></option>
						<% end %>
					</select>
				</div>
			</div>
			<button type="submit" class="btn btn-primary start"><i> Actualizar Resistencia al guarde</i>
		</form>
	</div>
</div>
<script type="text/javascript">
$(function () {
$('#date').datetimepicker({
viewMode: 'years',
format: 'DD/MM/YYYY'
});
});
</script>