<!-- START DATATABLE 1 -->
<h3>Mercados</h3>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Mercados |
        <small></small>
        <%= link_to 'Nuevo Mercado', new_company_market_path %>
      </div>
      <div class="panel-body">
        <table id="datatable1" class="table table-striped table-hover">
          <thead>
            <tr>
              <th class="sort-alpha">Nombre</th>
              <th class="sort-alpha">Codigo</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% @markets.each do |market| %>
            <tr class="gradeX">
              <td> <%= market.name %> </td>
              <td> <%= market.code %> </td>
              <td>
                <%= link_to 'Editar', edit_market_path(market) %> |
                <%= link_to 'Eliminar', market,  method: :delete, data: { confirm: 'Desea eliminar el Mercado?' } %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<!-- END DATATABLE 1 -->
