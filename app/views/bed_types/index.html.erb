<!-- START DATATABLE 1 -->
<h3>Tipos de cama</h3>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Tipos de cama |
        <small></small> |
        <%= link_to 'Nuevo Tipo', new_bed_type_path %>
      </div>
      <div class="panel-body">
        <table id="datatable1" class="table table-striped table-hover">
          <thead>
            <tr>
              <th class="sort-alpha">Nombre</th>
              <th class="sort-alpha">Medida</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% @bed_types.each do |bed_type| %>
            <tr class="gradeX">
              <td> <%= bed_type.name %> </td>
              <td> <%= bed_type.width %> </td>
              <td>
                <%= link_to 'Editar', edit_bed_type_path(bed_type) %> |
                <%= link_to 'Eliminar', bed_type,  method: :delete, data: { confirm: 'Desea eliminar el tipo?' } %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<!-- END DATATABLE 1 -->
